<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="VisualChallenge.VisualChallengePage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White"
             Title="Visual Challenge">
    <ScrollView x:Name="scrollView">
        <Grid x:Name="contentGrid">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="300" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Image Grid.Row="0" 
                   Source="Image"
                   Aspect="AspectFill"
                   HeightRequest="300" />
            <BoxView Grid.Row="0" 
                     Color="White"
                     Opacity="0.2"
                     VerticalOptions="Start"
                     HorizontalOptions="Fill"
                     HeightRequest="100" />
            <BoxView Grid.Row="0"
                     Color="Black"
                     Opacity="0.4"
                     HorizontalOptions="Start"
                     VerticalOptions="Fill"
                     WidthRequest="120"/>
            
            <!-- String format not working as expected -->
            <Label Grid.Row="0"
                   Text="{Binding Event.Date}" 
                   VerticalOptions="Center" 
                   Margin="10, 0"
                   FontSize="Large"
                   TextColor="White"/>
            
            <Label Grid.Row="0"
                   Margin="4" 
                   Text="ONSTAGE - STREAM AT THE VENUE" 
                   BackgroundColor="Yellow" 
                   TextColor="Black"
                   VerticalOptions="End"
                   HorizontalOptions="StartAndExpand"/>
            
            <StackLayout Grid.Row="1"
                         Margin="10"
                         VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Event.Place}" TextDecorations="Underline" HorizontalOptions="StartAndExpand" />
                    <Label Text="Navigate" TextDecorations="Underline" HorizontalOptions="EndAndExpand" />
                </StackLayout>
                
                <Label Text="{Binding Event.Location}" 
                       HorizontalOptions="Start" />
                
                <Editor Text="{Binding Event.Description}" HeightRequest="400"  />
            </StackLayout>
            
            
            <StackLayout Grid.Row="2" 
                         Margin="10">
                <Entry Placeholder="Event title" />
                <Entry Placeholder="Artist title" />
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand">
                    <Button Text="Save" 
                            BackgroundColor="Green"
                            HorizontalOptions="FillAndExpand"/>
                    <Button Text="Cancel" 
                            BackgroundColor="Red"
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </StackLayout>
        </Grid>        
    </ScrollView>

    
</ContentPage>