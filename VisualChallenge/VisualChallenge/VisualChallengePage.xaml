<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="VisualChallenge.VisualChallengePage"
             Shell.NavBarIsVisible="True"
             BackgroundColor="White"
             Visual="Material"
             >
    <ContentPage.Resources>
        <StyleSheet>
            <![CDATA[
            .dayLabel {
                text-align: center;
                color: white;
                font-size: 18;
                -xf-vertical-text-alignment: center;
            }
            ]]>
        </StyleSheet>
    </ContentPage.Resources>
    
    <Shell.TitleView>
        <FlexLayout HorizontalOptions="Fill" 
            Direction="Row" 
                    AlignItems="Center" JustifyContent="SpaceBetween">
            <Button Visual="Default" 
                    Text="&lt;" 
                    FontSize="18"
                    BackgroundColor="Transparent" 
                    TextColor="White"/>
            <Label Text="Week of Nov 16" 
                   FlexLayout.Grow="1" 
                   TextColor="White" 
                   MaxLines="1"
                   FontSize="18" 
                   HorizontalOptions="Fill"
                   HorizontalTextAlignment="Center"/>
            <Button Visual="Default" 
                    Text="&gt;" 
                    FontSize="18"
                    BackgroundColor="Transparent" 
                    TextColor="White"/>
        </FlexLayout>
    </Shell.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Icon="add.png" />
    </ContentPage.ToolbarItems>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IconOverride="equalizer.png"/>
    </Shell.BackButtonBehavior>

    <Grid Margin='{OnPlatform iOS="0,80,0,0"}'>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <BoxView BackgroundColor="{StaticResource orangeColor}" 
                 Grid.Row="0" 
                 Grid.RowSpan="2"
                 Grid.ColumnSpan="3"
                 />

        

        <!-- segmented bar -->
        <Frame Grid.Row="0" 
               Grid.ColumnSpan="3"
               HasShadow="False" 
               Margin="10" 
               CornerRadius="4" BorderColor="White"
               BackgroundColor="Transparent"
               Visual="Default"
               />

        <Button 
            Margin="10,10,0,10"
            Grid.Row="0"
            Text="Month"
            TextColor="White"
            BackgroundColor="Transparent"
            Visual="Default"
            />

        <Button 
            Margin="0,10"
            Grid.Row="0"
            Grid.Column="1"
            Text="Week"
            CornerRadius="0"
            BackgroundColor="White"
            TextColor="{StaticResource orangeColor}"
            Visual="Default"
            />

        <Button 
            Margin="0,10,10,10"
            Grid.Row="0"
            Grid.Column="2"
            Text="Day"
            BackgroundColor="Transparent"
            TextColor="White"
            Visual="Default"
            />

        <!-- week days bar -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="10" Grid.Column="0" class="dayLabel"
                   VerticalTextAlignment="Center"/>
            <Label Text="11" Grid.Column="1" class="dayLabel"
                   VerticalTextAlignment="Center"/>
            <Label Text="12" Grid.Column="2" class="dayLabel"
                   VerticalTextAlignment="Center"/>
            <Label Text="13" Grid.Column="3" class="dayLabel" 
                   VerticalTextAlignment="Center"/>
            <Label Text="14" Grid.Column="4" class="dayLabel"
                   VerticalTextAlignment="Center"/>
            <Label Text="15" Grid.Column="5" class="dayLabel"
                   VerticalTextAlignment="Center"/>
            <Label Text="16" Grid.Column="6" class="dayLabel"
                   VerticalTextAlignment="Center"/>

            <Frame Visual="Default"
                   BackgroundColor="Transparent" BorderColor="White" Grid.Column="3" 
                   HasShadow="False" CornerRadius="10" VerticalOptions="Center"/>
        </Grid>
        
        <!-- List -->
        <ListView Grid.Row="2" Grid.ColumnSpan="3">
            
        </ListView>

    </Grid>
    
</ContentPage>
