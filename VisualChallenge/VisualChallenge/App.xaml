<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisualChallenge.App">
    <Application.Resources>
        
        <Style x:Key="baseButtonStyle" TargetType="Button">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS">Branding-SemiBold</On>
                        <On Platform="Android">Branding-SemiBold.otf#Branding-SemiBold</On>
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="baseSemiBoldEntryStyle" TargetType="Entry">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS">Branding-SemiBold</On>
                        <On Platform="Android">Branding-SemiBold.otf#Branding-SemiBold</On>
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="baseSemiBoldLabelStyle" TargetType="Label">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS">Branding-SemiBold</On>
                        <On Platform="Android">Branding-SemiBold.otf#Branding-SemiBold</On>
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="baseBoldLabelStyle" TargetType="Label">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS">Branding-Bold</On>
                        <On Platform="Android">Branding-Bold.otf#Branding-Bold</On>
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Application.Resources>
</Application>